<script>
    function logout() {
        fetch('logout', {
            method: 'POST'
        }).then(response => {
            if (response.ok) {
                window.location.href = 'login.html'; // Redirect to login page
            } else {
                alert('Failed to log out.');
            }
        });
    }


</script>
